<h3>{{viewTitle}}</h3>
<form action="/ratingComment" method="POST" autocomplete="off"> <input type="hidden" name="_id" value="{{ratingComment._id}}">
    <div class="form-row">
        <div class="form-group">
            <h3> Select Book: </h3>
            <select name="rc_isbn" placeholder="Book's ISBN" value="{{ratingComment.rc_isbn}}">
                {{#each bookList}}
                <option value="{{this.isbn}}">{{this.title}}</option>
                {{/each}}
            </select><br>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6"> <input type="text" class="form-control" name="comments" placeholder="Comments" value="{{ratingComment.comments}}">
        </div>
        <div class="form-group col-md-6"> <input type="number" class="form-control" step="0.1" min="1" max="5" name="ratings" placeholder="Rating (1-5)" value="{{ratingComment.ratings}}">
        </div>
    </div>
    <div class="form-group"> <button type="submit" class="btn btn-info" href="/list{{_id}}"> <i
                class="fa fa-database"></i> Submit </button> </div>
</form>
</div>